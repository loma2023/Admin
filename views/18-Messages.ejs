<%- include('Partials/Header.ejs'); -%>

    <%- include('Partials/Menu.ejs'); -%>

        <div class="Layout-Container">
            <%- include('Partials/DetailsCompany.ejs'); -%>
                <div class="Wrapper-Tilte">
                    <h1 class="Title-Container">
                        <%= Title %>
                    </h1>
                    <div class="line">
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                </div>
                <div class="Buttons-Container">
                    <div class="right">
                        <div class="Row grid-4">
                            <div class="card-item Green">
                                <i class='item-icon bx bx-dollar'></i>
                                <div class="center">
                                    <h3 class="TableLength">0.00</h3>
                                    <p>عدد الرسائل</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="left">
                        <%- include('Partials/Buttons.ejs'); -%>
                    </div>
                </div>

                <div class="Search-Container">
                    <div class="input-box">
                        <input type="search" id="SearchByName" class="SearchInput" onkeyup="Search()" required>
                        <label>البحث بالاسم </label>
                        <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                        <div class="Filter-box">
                            <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                            <i class='bx bxs-filter-alt Filter-icon' onclick="ShowFilter()"></i>
                            <div class="filter-item arrow arr-top-left">
                                <h5 id="SearchByName" class="active">البحث بالاسم </h5>
                                <h5 id="SearchByEmail">البحث بالإميل </h5>
                            </div>
                        </div>
                        <span class='bx bx-search'></span>
                    </div>
                    <%- include('Partials/SearchDate.ejs'); -%>

                </div>

                <div class="Table-Container">
                    <table class="Table HideTh">
                        <thead>
                            <tr>
                                <th>م</th>
                                <th>الاسم</th>
                                <th>الإميل</th>
                                <th>الرسالة</th>
                                <th>الموقع</th>
                                <th>التاريخ</th>
                                <th>الاجراء</th>
                            </tr>
                        </thead>
                        <tbody class="Table-body"></tbody>
                    </table>
                </div>
        </div>

        <div class="Form-Container Form-Message">
            <div class="overlow"></div>
            <form class="Form">
                <div class="Form-scroll">
                    <i onclick="Hide_Container()" class="bx bx-x X-Toast"></i>
                    <div class="Form-header">
                        <div class="Wrapper-Tilte">
                            <h3 class="Title-Form-Message">Sent a Message</h3>
                            <div class="line">
                                <div></div>
                                <div></div>
                                <div></div>
                            </div>
                        </div>
                        <i class="Form-logo">
                            <img src="Img/Logo.png" alt="" srcset="">
                            <h1 class="logo-text">MODERN</h1>
                        </i>
                    </div>

                    <div class="Person-Details">
                        <div class="right">
                            <div class="item">
                                <h4>من</h4>
                                <p class="FromEmail">MODERN</p>
                            </div>
                        </div>
                        <div class="left">
                            <div class="item">
                                <h4>الي</h4>
                                <p class="ToEmail"></p>
                            </div>
                        </div>
                    </div>
                    <div class="Form-body">
                        <div class="input-box">
                            <textarea class="Message" placeholder="اكتب رسالة"></textarea>
                        </div>
                    </div>

                    <div class="Form-footer">
                        <button type="button" id="" onclick="NewMessage(id)"
                            class="btn btn-Save btn-Collect">أرسال</button>
                        <button type="button" onclick="Hide_Container()" class="btn btn-Cancel">الغاء</button>
                    </div>
                </div>
            </form>
        </div>

        <%- include('Partials/Footer.ejs'); -%>

            <script src="Js/20-Messages.js"></script>

            </body>

            </html>