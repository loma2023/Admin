<div class="Layout-Menu">
    <i href="#" class="layout-logo">
        <img src="Img/logo.png" alt="" srcset="">
        <div class="logo-text">MODERN</div>
    </i>
    <i class='cancel-icon bx bxs-x-circle' onclick="ActiveBody()"></i>


    <div class="wrapper-items">

        <div class="menu-item <% if (Title.includes("Home")) { %> active <% } %>">
                <a href="Home">
                    <i class="icon bx bxs-home"></i>
                    <div class="item-title">الصفحة الرئيسية</div>
                </a>
        </div>

        <div class="menu-item <% if (Title.includes("عملاء ماركت")) { %> active <% } %>">
            <a href="MODERNCustomersData">
                <i class="icon bx bxs-user"></i>
                <div class="item-title">عملاء موديرن</div>
            </a>
        </div>

        <div class="menu-item <% if (Title.includes("عملاء حماية")) { %> active <% } %>">
            <a href="HemayaCustomersData">
                <i class="icon bx bxs-user"></i>
                <div class="item-title">عملاء حماية</div>
            </a>
        </div>

        <div class="menu-item <% if (Title.includes("سجل التحصيلات")) { %> active <% } %>">
            <a href="CashBook">
                <i class="icon bx bx-dollar"></i>
                <div class="item-title">سجل التحصيلات</div>
            </a>
        </div>

        <div class="menu-item <% if (Title.includes("رسائل العملاء")) { %> active <% } %>">
            <a href="Messages">
                <i class="icon bx bxs-envelope"></i>
                <div class="item-title">رسائل العملاء</div>
            </a>
        </div>
    </div>
</div>

<header class="Layout-Header">
    <i class='menu-toggle bx bx-menu-alt-right' onclick="ActiveBody()"></i>

    <div class="tools">
        <i class='icon screen-toggle bx bx-fullscreen' onclick="ToggleFullScreen()"></i>

        <% if (User.DarkMood===true) { %>
            <i class='icon moon-toggle bx bxs-sun' onclick="DarkMood()"></i>
            <% } %>
                <% if (User.DarkMood !=true) { %>
                    <i class='icon moon-toggle bx bxs-moon' onclick="DarkMood()"></i>
                    <% } %>


                        <div class="Notifications">
                            <i class='icon bell-icon bx bx-bell'></i>
                            <span class="num-not">0</span>
                           
                            <div class="Notificat-body arrow arr-top-left">
                                <div class="Notificat-items"></div>
                            </div>
                        </div>

                        <div class="UserTools">
                            <img src="Img/avatar.png" alt="" srcset="">
                           
                            <div class="UserPage arrow arr-top-left">
                                <a href="Settings" class="PageItem">
                                    <i class='icon bell-icon bx bx-cog'></i>
                                    <h3>الاعدادات</h3>
                                    <i class="bx bxs-left-arrow"></i>
                                </a>

                                <a href="SignOut" class="PageItem">
                                    <i class='icon bell-icon bx bx-log-out'></i>
                                    <h3>خروج</h3>
                                    <i class="bx bxs-left-arrow"></i>
                                </a>
                            </div>
                        </div>

    </div>
</header>